// Email Tracking Dashboard Component
// File: components/EmailTrackingDashboard.tsx

import React, { useState, useEffect } from 'react';

interface TrackingAnalytics {
  overview: {
    totalEmails: number;
    totalOpens: number;
    uniqueOpens: number;
    totalClicks: number;
    uniqueClicks: number;
    openRate: number;
    clickRate: number;
    clickThroughRate: number;
    bounceRate: number;
    avgTimeToOpen: number;
    avgTimeToClick: number;
  };
  deviceBreakdown: {
    devices: Record<string, number>;
    browsers: Record<string, number>;
    operatingSystems: Record<string, number>;
  };
  timeline: Array<{
    period: string;
    emails: number;
    opens: number;
    clicks: number;
    openRate: number;
  }>;
  topPerforming: {
    topEmails: Array<{
      emailId: string;
      recipients: number;
      opens: number;
      clicks: number;
      openRate: number;
      clickRate: number;
    }>;
    topCampaigns: Array<{
      campaignId: string;
      recipients: number;
      opens: number;
      clicks: number;
      openRate: number;
      clickRate: number;
    }>;
  };
}

interface EmailTrackingDashboardProps {
  className?: string;
}

const EmailTrackingDashboard: React.FC<EmailTrackingDashboardProps> = ({ className = '' }) => {
  const [analytics, setAnalytics] = useState<TrackingAnalytics | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [timeRange, setTimeRange] = useState('7d');
  const [refreshKey, setRefreshKey] = useState(0);

  useEffect(() => {
    // Safely handle async operation
    const loadAnalytics = async () => {
      try {
        await fetchAnalytics();
      } catch (err) {
        console.error('Failed to load analytics:', err);
        setError('Failed to load analytics data');
        setLoading(false);
      }
    };
    
    loadAnalytics();
  }, [timeRange, refreshKey]);

  const fetchAnalytics = async () => {
    try {
      setLoading(true);
      setError(null);

      const response = await fetch(`/api/tracking/analytics?timeRange=${timeRange}`, {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json',
        },
      });

      if (!response.ok) {
        throw new Error(`Failed to fetch analytics: ${response.status}`);
      }

      const data = await response.json();
      if (data.success && data.analytics) {
        setAnalytics(data.analytics);
      } else {
        throw new Error('Invalid analytics response');
      }
    } catch (err) {
      console.error('Analytics fetch error:', err);
      setError(err instanceof Error ? err.message : 'Failed to load analytics');
    } finally {
      setLoading(false);
    }
  };

  const refreshData = () => {
    setRefreshKey(prev => prev + 1);
  };

  const formatTimeRange = (range: string) => {
    const ranges: Record<string, string> = {
      '1d': 'Last 24 Hours',
      '7d': 'Last 7 Days', 
      '30d': 'Last 30 Days',
      '90d': 'Last 90 Days'
    };
    return ranges[range] || range;
  };

  const formatTimeToRead = (minutes: number) => {
    if (minutes < 60) return `${minutes}m`;
    const hours = Math.floor(minutes / 60);
    const remainingMinutes = minutes % 60;
    return remainingMinutes > 0 ? `${hours}h ${remainingMinutes}m` : `${hours}h`;
  };

  if (loading) {
    return (
      <div className={`${className}`}>
        <div className="animate-pulse">
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            {[...Array(4)].map((_, i) => (
              <div key={i} className="bg-gray-800 border border-gray-700 rounded-xl p-6">
                <div className="h-4 bg-gray-700 rounded w-3/4 mb-4"></div>
                <div className="h-8 bg-gray-700 rounded w-1/2 mb-2"></div>
                <div className="h-3 bg-gray-700 rounded w-1/3"></div>
              </div>
            ))}
          </div>
          <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div className="bg-gray-800 border border-gray-700 rounded-xl p-6">
              <div className="h-64 bg-gray-700 rounded"></div>
            </div>
            <div className="bg-gray-800 border border-gray-700 rounded-xl p-6">
              <div className="h-64 bg-gray-700 rounded"></div>
            </div>
          </div>
        </div>
      </div>
    );
  }

  if (error) {
    return (
      <div className={`${className}`}>
        <div className="bg-red-900/20 border border-red-500/30 rounded-xl p-6">
          <div className="flex items-center gap-3 mb-4">
            <span className="text-red-400">‚ö†Ô∏è</span>
            <h3 className="text-lg font-semibold text-red-400">Analytics Error</h3>
          </div>
          <p className="text-red-300 mb-4">{error}</p>
          <button
            onClick={refreshData}
            className="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors"
          >
            Retry
          </button>
        </div>
      </div>
    );
  }

  if (!analytics) {
    return (
      <div className={`${className}`}>
        <div className="text-center text-gray-400 py-12">
          No tracking data available
        </div>
      </div>
    );
  }

  return (
    <div className={`${className}`}>
      {/* Header */}
      <div className="flex justify-between items-center mb-8">
        <div>
          <h2 className="text-2xl font-bold text-white mb-2">Email Tracking Analytics</h2>
          <p className="text-gray-400">Monitor email engagement and performance metrics</p>
        </div>
        <div className="flex gap-3">
          <select
            value={timeRange}
            onChange={(e) => setTimeRange(e.target.value)}
            className="bg-gray-800 border border-gray-600 rounded-lg px-3 py-2 text-white focus:ring-2 focus:ring-blue-500"
          >
            <option value="1d">Last 24 Hours</option>
            <option value="7d">Last 7 Days</option>
            <option value="30d">Last 30 Days</option>
            <option value="90d">Last 90 Days</option>
          </select>
          <button
            onClick={refreshData}
            className="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center gap-2"
          >
            üìä Refresh
          </button>
        </div>
      </div>

      {/* Key Metrics */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div className="bg-gray-800/50 border border-gray-700 rounded-xl p-6 backdrop-blur-sm">
          <div className="flex items-center gap-3 mb-4">
            <div className="bg-blue-500/20 p-2 rounded-lg">
              <span className="text-blue-400">üìß</span>
            </div>
            <h3 className="font-semibold text-gray-300">Total Emails</h3>
          </div>
          <div className="text-3xl font-bold text-white mb-1">{analytics.overview.totalEmails.toLocaleString()}</div>
          <div className="text-sm text-gray-400">{formatTimeRange(timeRange)}</div>
        </div>

        <div className="bg-gray-800/50 border border-gray-700 rounded-xl p-6 backdrop-blur-sm">
          <div className="flex items-center gap-3 mb-4">
            <div className="bg-green-500/20 p-2 rounded-lg">
              <span className="text-green-400">üëÅÔ∏è</span>
            </div>
            <h3 className="font-semibold text-gray-300">Open Rate</h3>
          </div>
          <div className="text-3xl font-bold text-white mb-1">{analytics.overview.openRate}%</div>
          <div className="text-sm text-gray-400">
            {analytics.overview.uniqueOpens} of {analytics.overview.totalEmails} opened
          </div>
        </div>

        <div className="bg-gray-800/50 border border-gray-700 rounded-xl p-6 backdrop-blur-sm">
          <div className="flex items-center gap-3 mb-4">
            <div className="bg-yellow-500/20 p-2 rounded-lg">
              <span className="text-yellow-400">üëÜ</span>
            </div>
            <h3 className="font-semibold text-gray-300">Click Rate</h3>
          </div>
          <div className="text-3xl font-bold text-white mb-1">{analytics.overview.clickRate}%</div>
          <div className="text-sm text-gray-400">
            {analytics.overview.uniqueClicks} recipients clicked
          </div>
        </div>

        <div className="bg-gray-800/50 border border-gray-700 rounded-xl p-6 backdrop-blur-sm">
          <div className="flex items-center gap-3 mb-4">
            <div className="bg-purple-500/20 p-2 rounded-lg">
              <span className="text-purple-400">‚è±Ô∏è</span>
            </div>
            <h3 className="font-semibold text-gray-300">Avg. Time to Open</h3>
          </div>
          <div className="text-3xl font-bold text-white mb-1">
            {formatTimeToRead(analytics.overview.avgTimeToOpen)}
          </div>
          <div className="text-sm text-gray-400">Average response time</div>
        </div>
      </div>

      {/* Summary Stats */}
      <div className="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        {/* Device Breakdown */}
        <div className="bg-gray-800/50 border border-gray-700 rounded-xl p-6 backdrop-blur-sm">
          <h3 className="text-xl font-semibold text-white mb-4">üì± Device Breakdown</h3>
          <div className="space-y-3">
            {Object.entries(analytics.deviceBreakdown.devices).map(([device, count]) => {
              const total = Object.values(analytics.deviceBreakdown.devices).reduce((a, b) => a + b, 0);
              const percentage = total > 0 ? ((count / total) * 100).toFixed(1) : 0;
              return (
                <div key={device} className="flex justify-between items-center p-3 bg-gray-700/30 rounded-lg">
                  <div className="flex items-center gap-2">
                    <span>{device === 'mobile' ? 'üì±' : device === 'tablet' ? 'üì±' : 'üíª'}</span>
                    <span className="text-sm font-medium text-white capitalize">{device}</span>
                  </div>
                  <div className="text-right">
                    <div className="text-sm font-semibold text-blue-400">{percentage}%</div>
                    <div className="text-xs text-gray-400">{count} events</div>
                  </div>
                </div>
              );
            })}
          </div>
        </div>

        {/* Browser Breakdown */}
        <div className="bg-gray-800/50 border border-gray-700 rounded-xl p-6 backdrop-blur-sm">
          <h3 className="text-xl font-semibold text-white mb-4">üåê Browser Distribution</h3>
          <div className="space-y-3">
            {Object.entries(analytics.deviceBreakdown.browsers)
              .sort(([,a], [,b]) => b - a)
              .slice(0, 5)
              .map(([browser, count]) => {
                const total = Object.values(analytics.deviceBreakdown.browsers).reduce((a, b) => a + b, 0);
                const percentage = total > 0 ? ((count / total) * 100).toFixed(1) : 0;
                return (
                  <div key={browser} className="flex justify-between items-center p-3 bg-gray-700/30 rounded-lg">
                    <div className="text-sm font-medium text-white">{browser}</div>
                    <div className="text-right">
                      <div className="text-sm font-semibold text-blue-400">{percentage}%</div>
                      <div className="text-xs text-gray-400">{count} events</div>
                    </div>
                  </div>
                );
              })}
          </div>
        </div>
      </div>

      {/* Top Performing Content */}
      <div className="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        {/* Top Performing Emails */}
        <div className="bg-gray-800/50 border border-gray-700 rounded-xl p-6 backdrop-blur-sm">
          <h3 className="text-xl font-semibold text-white mb-4">üèÜ Top Performing Emails</h3>
          <div className="space-y-3">
            {analytics.topPerforming.topEmails.slice(0, 5).map((email, index) => (
              <div key={email.emailId} className="flex justify-between items-center p-3 bg-gray-700/30 rounded-lg">
                <div className="flex-1">
                  <div className="text-sm font-medium text-white">
                    Email #{email.emailId.slice(-8)}
                  </div>
                  <div className="text-xs text-gray-400">
                    {email.recipients} recipients
                  </div>
                </div>
                <div className="text-right">
                  <div className="text-sm font-semibold text-green-400">{email.openRate}% open</div>
                  <div className="text-xs text-yellow-400">{email.clickRate}% click</div>
                </div>
              </div>
            ))}
          </div>
        </div>

        {/* Timeline Summary */}
        <div className="bg-gray-800/50 border border-gray-700 rounded-xl p-6 backdrop-blur-sm">
          <h3 className="text-xl font-semibold text-white mb-4">üìà Recent Activity Timeline</h3>
          <div className="space-y-3">
            {analytics.timeline.slice(-5).map((item, index) => (
              <div key={index} className="flex justify-between items-center p-3 bg-gray-700/30 rounded-lg">
                <div className="text-sm text-gray-300">
                  {new Date(item.period).toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric'
                  })}
                </div>
                <div className="flex gap-4 text-xs">
                  <span className="text-blue-400">üìß {item.emails}</span>
                  <span className="text-green-400">üëÅÔ∏è {item.opens}</span>
                  <span className="text-yellow-400">üëÜ {item.clicks}</span>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      {/* Additional Metrics */}
      <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div className="bg-gray-800/30 border border-gray-700 rounded-lg p-4 text-center">
          <div className="text-2xl font-bold text-red-400">{analytics.overview.bounceRate}%</div>
          <div className="text-sm text-gray-400">Bounce Rate</div>
        </div>
        <div className="bg-gray-800/30 border border-gray-700 rounded-lg p-4 text-center">
          <div className="text-2xl font-bold text-purple-400">{analytics.overview.clickThroughRate}%</div>
          <div className="text-sm text-gray-400">Click Through Rate</div>
        </div>
        <div className="bg-gray-800/30 border border-gray-700 rounded-lg p-4 text-center">
          <div className="text-2xl font-bold text-blue-400">{analytics.overview.totalOpens}</div>
          <div className="text-sm text-gray-400">Total Opens</div>
        </div>
        <div className="bg-gray-800/30 border border-gray-700 rounded-lg p-4 text-center">
          <div className="text-2xl font-bold text-yellow-400">{analytics.overview.totalClicks}</div>
          <div className="text-sm text-gray-400">Total Clicks</div>
        </div>
      </div>
    </div>
  );
};

export default EmailTrackingDashboard;